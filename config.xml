<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "www.turni.com"
        version     = "3.4.0" >

    <gap:config-file platform="ios" parent="CFBundleShortVersionString">
        <string>340</string>
    </gap:config-file>

    <preference name="phonegap-version"  />	
	<gap:platform name="android" />
    

    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <name>Turni</name>
    <icon src="icon.png" gap:platform="android" width="57" height="57" />
    <preference name="android-targetSdkVersion" value="28" />

	
    <author href="https://advenias.it/" email="senior@advenias.it">
        Sauro Gabellini
    </author>
	    
    <plugin name="cordova-plugin-inappbrowser" spec="1.0.1" />        
    <plugin name="cordova-plugin-barcodescanner" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm"/>        
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.1" />
    
	<access origin="*" />
</widget>
